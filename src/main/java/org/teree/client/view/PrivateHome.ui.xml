<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:exp='urn:import:org.teree.client.view.explorer'
	xmlns:view="urn:import:org.teree.client.view" xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">
	
	<ui:with field='res' type="org.teree.client.view.resource.PageStyle" />
	<ui:with field="text" type="org.teree.client.text.PrivateHome" />

	<ui:style>

		.privatePanel {
			margin: 0 auto;
			margin-top: -10px;
			margin-bottom: 10px;
			padding-bottom: 5px;
		}

		.userPanel {
			height: 100%;
			margin: 0px;
			margin-left: 20px;
			text-align: center;
		}
		
		.countBox {
			padding: 10px;
			padding-left: 20px;
			padding-right: 20px;
			margin: 10px;
			font-size: 35px;
			line-height: 70px;
			cursor: default;
		}

	</ui:style>

	<g:FlowPanel>
		<view:Header ui:field="header"/>
		<exp:PrivatePanel ui:field="privatePanel" addStyleNames="{style.privatePanel}"></exp:PrivatePanel>
		<b:Alert ui:field="status" addStyleNames="{res.css.status}" close="false" visible="false"/>
		<g:HorizontalPanel addStyleNames="{res.css.scene}">
			<g:cell>
				<b:Well addStyleNames="{style.userPanel}">
					<g:HorizontalPanel>
						<b:Tooltip text="{text.public_schemes}">
							<b:Label ui:field="publicCount" addStyleNames="{style.countBox}"/>
						</b:Tooltip>
						<b:Tooltip text="{text.private_schemes}">
							<b:Label ui:field="privateCount" addStyleNames="{style.countBox}"/>
						</b:Tooltip>
					</g:HorizontalPanel>
					<b:Heading ui:field="name" size="4"/>
					<g:Label text="{text.joined_on} "/><g:Label ui:field="joined"/>
				</b:Well>
			</g:cell>
			<g:cell width="100%">
				<exp:Scene ui:field="scene"></exp:Scene>
			</g:cell>
		</g:HorizontalPanel>
	</g:FlowPanel>

</ui:UiBinder> 