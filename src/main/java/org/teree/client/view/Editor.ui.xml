<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:tw='urn:import:org.teree.client.view.editor'>
	<ui:style>

		.rootPanel {
		  width: 100%;
		  height: 100%;
		}

		.editPanel {
	      float: right;
		  width: 300px;
		}
		
		.status {
		  float: right;
		}
		
	</ui:style>
  
	<g:FlowPanel>
		<tw:Scene ui:field="scene"></tw:Scene>
		<!-- <ui:EditPanel> -->
		    <g:Button ui:field='btnNew' ui:text="New"></g:Button>
		    <g:Button ui:field='btnSave' ui:text="Save"></g:Button>
		<!--</ui:EditPanel> -->
		<g:Label ui:field='status' addStyleNames="{style.status}"></g:Label>
	</g:FlowPanel>

</ui:UiBinder> 