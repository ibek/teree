<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:view="urn:import:org.teree.client.view"
	xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">

	<ui:with field='res' type="org.teree.client.view.resource.PageStyle" />
	<ui:with field="text" type="org.teree.client.text.Settings" />
	
	<ui:style>

		.settingsTab {
			text-align: left;
		}

	</ui:style>

	<g:FlowPanel ui:field="panel">
		<view:Header ui:field="header"/>
		<b:Alert ui:field="status" addStyleNames="{res.css.status}" close="false" visible="false"/>
		<g:FlowPanel addStyleNames="{res.css.scene}">
			<b:TabPanel tabPosition="left" ui:field="tabPanel">
				<b:Tab icon="USER" heading="{text.profile}" active="true">
					<b:WellForm ui:field="profileForm" type="HORIZONTAL" addStyleNames="{style.settingsTab}">
					<b:Fieldset>
                        <b:Legend>
                            <g:Label text="{text.profile}" />
                        </b:Legend>
                        
						<b:ControlGroup ui:field="nameControlGroup">
                            <b:ControlLabel for="name">
                                <g:Label text="{text.name}" />
                            </b:ControlLabel>
                            <b:Controls>
                                <b:TextBox b:id="name"
                                    ui:field="name" placeholder="{text.name}" />
                                <b:HelpInline ui:field="nameHelpInline" />
                            </b:Controls>
                        </b:ControlGroup>
                        
                        <b:ControlGroup ui:field="emailControlGroup">
                            <b:ControlLabel for="email">
                                <g:Label text="{text.email}" />
                            </b:ControlLabel>
                            <b:Controls>
                                <b:TextBox b:id="email"
                                    ui:field="email" placeholder="{text.email}" />
                                <b:HelpInline ui:field="emailHelpInline" />
                            </b:Controls>
                        </b:ControlGroup>
                        
                        <b:FormActions>
							<b:SubmitButton type="PRIMARY" ui:field="updateProfile" text="{text.update}" />
							<b:Button ui:field="resetPForm" text="{text.reset}" />
						</b:FormActions>
                    </b:Fieldset>
                    </b:WellForm>
				</b:Tab>
				<b:Tab icon="WRENCH" heading="{text.account_settings}">
					<b:WellForm ui:field="changePasswordForm" type="HORIZONTAL" addStyleNames="{style.settingsTab}">
					<b:Fieldset>
                        <b:Legend>
                            <g:Label text="{text.change_password}" />
                        </b:Legend>
                        
						<b:ControlGroup ui:field="passwordControlGroup">
                            <b:ControlLabel for="oldPassword">
                                <g:Label text="{text.old_password}" />
                            </b:ControlLabel>
                            <b:Controls>
								<b:PasswordTextBox b:id="oldPassword" ui:field="oldPassword"
									placeholder="{text.old_password}" />
                                <b:HelpInline ui:field="oldPasswordHelpInline" />
                            </b:Controls>
                            <b:ControlLabel for="password">
                                <g:Label text="{text.password}" />
                            </b:ControlLabel>
                            <b:Controls>
								<b:PasswordTextBox b:id="password" ui:field="password"
									placeholder="{text.password}" />
                                <b:HelpInline ui:field="passwordHelpInline" />
                            </b:Controls>
                            <b:ControlLabel for="confirmPassword">
                                <g:Label text="{text.confirm_password}" />
                            </b:ControlLabel>
                            <b:Controls>
								<b:PasswordTextBox b:id="confirmPassword" ui:field="confirmPassword"
									placeholder="{text.confirm_password}" />
                                <b:HelpInline ui:field="confirmPasswordHelpInline" />
                            </b:Controls>
                        </b:ControlGroup>
                        
                        <b:FormActions>
							<b:SubmitButton type="PRIMARY" ui:field="changePassword" text="{text.change}" />
							<b:Button ui:field="resetCPForm" text="{text.reset}" />
						</b:FormActions>
                    </b:Fieldset>
                    </b:WellForm>
                    
                    <b:Well>
                    	<b:Legend>
                            <g:Label text="{text.delete_account}" />
                        </b:Legend>
                    	<b:Button type="DANGER" ui:field="deleteAccount" text="{text.delete_account}" />
                    </b:Well>
                    
				</b:Tab>
			</b:TabPanel>
		</g:FlowPanel>
	</g:FlowPanel>

</ui:UiBinder> 