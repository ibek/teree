<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:view="urn:import:org.teree.client.view"
	xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">

	<ui:with field='res' type="org.teree.client.view.resource.PageStyle" />
	<ui:with field="text" type="org.teree.client.text.Home" />
	<ui:with field="cres" type="org.teree.client.view.resource.CommonResources" />

	<ui:style>

		.scene {
			margin: 20px;
		}
		
		.link {
			font-size: 20px;
			cursor: Pointer;
		}

	</ui:style>

	<g:FlowPanel ui:field="panel">
		<view:Header ui:field="header"/>
		<b:Alert ui:field="status" addStyleNames="{res.css.status}" close="false" visible="false"/>
		<g:FlowPanel addStyleNames="{style.scene}">
			<b:PageHeader subtext="{text.subtitle}">teree</b:PageHeader>
			<b:AlertBlock width="500px" type="ERROR" heading="{text.attention}" text="{text.attention_testing}" />
			<g:Anchor ui:field="changeLogs" text="{text.change_logs}" addStyleNames="{style.link}" />
			<b:Heading size="2" text="{text.features}" />
				<b:Paragraph>
					<b:Badge>-</b:Badge><b:Badge text="{text.feature1}" /><br/>
					<b:Badge>-</b:Badge><b:Badge text="{text.feature2}" /><br/>
					<b:Badge>-</b:Badge><b:Badge text="{text.feature3}" /><br/>
					<b:Badge>-</b:Badge><b:Badge text="{text.feature4}" /><br/>
					<b:Badge>-</b:Badge><b:Badge text="{text.feature5}" />
				</b:Paragraph>
			<b:Heading size="2" text="{text.bug_tracking}" />
				<b:Paragraph>
					For any issue, file a bug in <g:Anchor href='http://www.bugheaven.com/bugzilla/teree/' target='_blank'>bugzilla</g:Anchor>.
					To log in, use following security credentials: <br/>
					Username: o1182493@rtrtr.com <br/>
					Password: anonymous
				</b:Paragraph>
			<b:Heading size="2" text="{text.teree_details}" />
				<b:NavList width="400px">
					<b:NavHeader text="{text.technical}" />
					<b:NavLink text="{text.technical_detail1}" />
					<b:NavLink text="{text.technical_detail2}" />
					<b:NavLink text="{text.technical_detail3}" />
				</b:NavList>
			<b:Heading size="2" text="{text.contact_and_feedback}" />
				<b:Heading size="4">Ivo Bek</b:Heading>
				<b:Paragraph>
					If you have any questions, problems or ideas, contact me at:
					<b:Image resource="{cres.email}"/>
				</b:Paragraph>
		</g:FlowPanel>
	</g:FlowPanel>

</ui:UiBinder> 