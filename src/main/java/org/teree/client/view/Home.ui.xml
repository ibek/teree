<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:view="urn:import:org.teree.client.view"
	xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">

	<ui:with field='res' type="org.teree.client.view.resource.PageStyle" />
	
	<ui:with field="cres" type="org.teree.client.view.resource.CommonResources" />

	<ui:style>

		.scene {
			margin: 20px;
		}

	</ui:style>

	<g:FlowPanel ui:field="panel">
		<view:Header ui:field="header"/>
		<b:Alert ui:field="status" addStyleNames="{res.css.status}" close="false" visible="false"/>
		<g:FlowPanel addStyleNames="{style.scene}">
			<b:PageHeader subtext="The structured information database with a tree representation.">teree</b:PageHeader>
			<b:Heading size="2">Features</b:Heading>
			<b:Paragraph>
				<b:Badge>-</b:Badge><b:Badge>generates MindMap</b:Badge><br/>
				<b:Badge>-</b:Badge><b:Badge>uses different types of nodes - text, image or link</b:Badge><br/>
				<b:Badge>-</b:Badge><b:Badge>exports MindMap as image or FreeMind map</b:Badge><br/>
				<b:Badge>-</b:Badge><b:Badge>supports drag and drop between nodes</b:Badge><br/>
				<b:Badge>-</b:Badge><b:Badge>keyboard control</b:Badge>
			</b:Paragraph>
			<b:Heading size="2">Bug tracking</b:Heading>
			<b:Paragraph>
				For any issue, file a bug in <g:Anchor href='http://www.bugheaven.com/bugzilla/teree/' target='_blank'>bugzilla</g:Anchor>.
				To log in, use following security credentials: <br/>
				Username: o1182493@rtrtr.com <br/>
				Password: anonymous
			</b:Paragraph>
			<b:Heading size="2">Contact</b:Heading>
			<b:Paragraph>
				<b:Heading size="4">Ivo Bek</b:Heading>
				<b:Image resource="{cres.email}"/>
			</b:Paragraph>
		</g:FlowPanel>
	</g:FlowPanel>

</ui:UiBinder> 