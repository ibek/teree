<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:view="urn:import:org.teree.client.view"
	xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">

	<ui:style>

		.header {
			position: absolute;
			top:0;
			width: 100%;
			margin: 0;
			margin-bottom: 10px;
		}

		.brand {
			cursor: Pointer;
		}

	</ui:style>

	<b:Navbar addStyleNames="{style.header}">
		<b:Brand ui:field='home' addStyleNames="{style.brand}">teree <small>beta</small></b:Brand>
		
		<b:Nav>
			<b:NavLink ui:field='create'>Create</b:NavLink>
			<b:NavLink ui:field="explore">Explore</b:NavLink>
			<b:NavLink ui:field="help">Help</b:NavLink>
		</b:Nav>
		<view:UserWidget ui:field="user" />
	</b:Navbar>

</ui:UiBinder> 