<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:viewpoint='urn:import:org.teree.client.view.viewpoint'
	xmlns:view="urn:import:org.teree.client.view" xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">
	
	<ui:with field='res' type="org.teree.client.view.resource.PageStyle" />
	
	<ui:style>

		.viewpointPanel {
			margin: 0 auto;
			margin-top: -10px;
			margin-bottom: 10px;
			padding-bottom: 5px;
		}

	</ui:style>
  
	<g:FlowPanel>
		<view:Header ui:field="header"/>
		<viewpoint:ViewpointPanel ui:field="panel" addStyleNames="{style.viewpointPanel}"></viewpoint:ViewpointPanel>
		<b:Alert ui:field="status" addStyleNames="{res.css.status}" close="false" visible="false"/>
		<viewpoint:Scene ui:field="scene" addStyleNames="{res.css.scene}"></viewpoint:Scene>
	</g:FlowPanel>

</ui:UiBinder> 