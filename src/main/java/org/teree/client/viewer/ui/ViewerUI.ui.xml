<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:viewer='urn:import:org.teree.client.viewer.ui'>
	<ui:style>

		.rootPanel {
		position: absolute;
		overflow: hidden;
		}
		
	</ui:style>
  
	<g:FlowPanel addStyleNames="{style.rootPanel}">
		<viewer:Scene ui:field="_scene"></viewer:Scene>
	</g:FlowPanel>

</ui:UiBinder> 