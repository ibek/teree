<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:viewer='urn:import:org.teree.client.viewer.ui'>
	<ui:style>

		.rootPanel {
		  margin:0 auto;
		  width: 100%;
		  height: 100%;
		}
		
	</ui:style>
  
	<g:FlowPanel addStyleNames="{style.rootPanel}">
	    <g:Button ui:field='_btnAdd' ui:text="Add"></g:Button>
	    <g:Button ui:field='_btnSave' ui:text="Save"></g:Button>
		<viewer:Scene ui:field="_scene"></viewer:Scene>
	</g:FlowPanel>

</ui:UiBinder> 