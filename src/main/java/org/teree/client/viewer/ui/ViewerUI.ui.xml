<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:viewer='urn:import:org.teree.client.viewer.ui'>
	<ui:style>

		.rootPanel {
		  float: left;
		  width: 100%;
		  height: 100%;
		}

		.editPanel {
	      float: right;
		  width: 300px;
		}
		
		.status {
		  float: right;
		}
		
	</ui:style>
  
	<g:HTMLPanel addStyleNames="{style.rootPanel}">
		<div class="{style.editPanel}">
		<ui:EditPanel>
		    <g:Button ui:field='_btnNew' ui:text="New"></g:Button>
		    <g:Button ui:field='_btnSave' ui:text="Save"></g:Button>
		</ui:EditPanel>
		</div>
		<div class="{style.status}">
			<g:Label ui:field='_status'></g:Label>
		</div>
		<viewer:Scene ui:field="_scene"></viewer:Scene>
	</g:HTMLPanel>

</ui:UiBinder> 